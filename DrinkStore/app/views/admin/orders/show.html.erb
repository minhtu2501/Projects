<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Order Detail</h1>
    <div id="order_detail">
      <p>
      <strong>ID Cart:</strong>
        <%= @order.cart_id %>
      </p>
      <p>
        <strong>Custome name:</strong>
        <%= @order.custome_name %>
      </p>
      <p>
        <strong>Email:</strong>
        <%= @order.email %>
      </p>
      <p>
        <strong>Mobile:</strong>
        <%= @order.mobile %>
      </p>
      <p>
        <strong>Address:</strong>
        <%= @order.address %>
      </p>
      <p>
        <strong>Status:</strong>
        <%= @order.status %>
      </p>
      <p>
        <strong>Date:</strong>
        <%= @order.created_at %>
      </p>
      <%= link_to 'Detail', detail_show_admin_cart_path(cart_id: @order.cart_id) %>
      <%= link_to 'Edit', edit_admin_order_path(@order) %> |
      <%= link_to 'Back', admin_orders_path %>

    </div>
      
  </div>
</div>