<h1>Listing <%= @category.name %> Products</h1>

<table class="table table-striped">
  <thead>
  <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Category</th>
      <th>Price</th>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @category.products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.category.name %></td>
        <td><%= product.price %></td>
        <td><%= product.number %></td>
        <td><%= link_to 'Show', admin_category_path(@category) %></td>
        <td><%= link_to 'Edit', edit_admin_product_path(@category) %></td>
        <td><%= link_to 'Destroy', admin_category_path(@category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>   
<% if can? :create, Product %>
  <%= link_to 'New Product', new_admin_product_path %>
<% end %>


