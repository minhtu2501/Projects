            </div>
            <% end %>
          <% end %>
        </div>
        <!-- Carousel nav -->
        <a class="carousel-control left" href="#myCarousel1" data-slide="prev">&lsaquo;</a>
        <a class="carousel-control right" href="#myCarousel1" data-slide="next">&rsaquo;</a>
      </div>
    </div>

    <div class="col-md-4">
    <strong>Big Deals</strong>
      <div id="myCarousel2" class="carousel slide vertical">
        <!-- Carousel items -->
        <div class="carousel-inner">
          <% @top_deals.each_with_index do |product, index| %>
