<div id="products_wrap">
<h1>SHOP</h1>
<div id="first">
  <h3>PAGES</h3>
  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/about">About us</a></li>
    <li><a href="/faqs">FAQs</a></li>
    <li><a href="/contact">Contact us</a></li>
    <li><a href="/privacy">Privacy policy</a></li>
    <li><a href="/terms">Terms and Conditions</a></li>
  </ul>
</div>
<ul id="product_list">
  <% @products.each do |product|%>
  <li>
    <%= image_tag product.picture.url, size: "100x100" %>
    <h4><a class="title"><%= link_to product.name, product_path(product) %></a></h4>
    <p><%= product.description %></p>
    <p><%= product.number %></p>
    <span><%= product.price %></span>
    Visual Effects: <%= rating_for product, "visual_effects" %>
    <br />
    <%= form_tag(order_items_path, method: :post) do %>
      <%= hidden_field_tag(:product_id, product.id) %>
      <%= submit_tag("Add to Cart") %>
    <% end %>
  </li>
  <% end %>
</ul>
</div>