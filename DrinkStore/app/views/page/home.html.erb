<div id="home_panel">
  <div class="row limit">  
    <div class="col-md-4">
      <strong>Products New</strong>
      <div id="myCarousel" class="carousel slide vertical">
        <!-- Carousel items -->
        <div class="carousel-inner">
          <% @recent_products.each_with_index do |product, index| %>
            <% if index == 0 %>
            <div class="active item">
              <%= product.name %>
              <%= image_tag product.picture.url, size: "310x250" %>
            </div>
            <% else %>
            <div class="item">
              <%= product.name %>
              <%= image_tag product.picture.url, size: "310x250" %>
            </div>
            <% end %>
          <% end %>
        </div>
        <!-- Carousel nav -->
        <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
        <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
      </div>
    </div>
    
    <div class="col-md-4">
    <strong>Top Seller</strong>
      <div id="myCarousel1" class="carousel slide vertical">
