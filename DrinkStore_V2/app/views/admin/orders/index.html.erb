<h1>Listing Orders</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID Cart</th>
      <th>Custome name</th>
      <th>Email</th>
      <th>Mobile</th>
      <th>Address</th>
      <th>Status</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.cart_id %></td>
        <td><%= order.custome_name %></td>
        <td><%= order.email %></td>
        <td><%= order.mobile %></td>
        <td><%= order.address %></td>
        <td><%= order.status %></td>
        <td><%= order.created_at %></td>
        <td><%= link_to 'Show', admin_order_path(order) %></td>
        <td><%= link_to 'Edit', edit_admin_order_path(order) %></td>
        <td><%= link_to 'Destroy', admin_order_path(order), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= will_paginate %>
